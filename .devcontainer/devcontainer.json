{
    "name": "Skilift Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "vscjava.vscode-java-pack",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "vscodevim.vim"
            ]
        }
    },
    "postCreateCommand": "./gradlew build",
    "remoteUser": "vscode"
}
